<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rec01">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/productIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:civ_border_color="@color/whiteCardColor"
            app:civ_border_width="1dp"
            android:src="@drawable/ic_shopping_cart_white_24dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTv"
            android:layout_marginTop="5dp"
            android:text="title"
            android:textSize="20dp"
            android:textColor="@color/blackTextColor"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descTv"
            android:layout_below="@id/titleTv"
            android:layout_marginTop="5dp"
            android:text="Desc"
            android:textSize="12dp"
            android:textColor="@color/blackTextColor"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/namePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Price"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textColor="@color/blackTextColor"
            android:gravity="start" />

        <TextView
            android:id="@+id/originalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="13%"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/namePrice"
            android:textAlignment="textStart"
            android:textColor="@color/blackTextColor"
            android:layout_toRightOf="@+id/namePrice"
            android:gravity="start" />

        <TextView
            android:id="@+id/disCountedPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/originalPrice"
            android:padding="10dp"
            android:text="10%"
            android:layout_marginTop="2dp"
            android:textAlignment="textStart"
            android:textColor="@color/blackTextColor"
            android:layout_toRightOf="@+id/originalPrice"
            android:gravity="start" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discountNote"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rectangle05"
            android:text="10% Off"
            android:textSize="10sp"
            android:padding="5dp"
            android:textColor="@color/green"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qtyTv"
            android:text="Quantity:"
            android:layout_marginTop="6dp"
            android:textSize="18sp"
            android:textColor="@color/blackTextColor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_try"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/less"
                android:padding="10dp"
                android:src="@drawable/ic_less_24dp"
                android:textAlignment="textStart"
                android:textColor="@color/blackTextColor"
                android:layout_toRightOf="@+id/less"
                android:gravity="start" />

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/less"
            android:padding="10dp"
            android:text="1"
            android:textSize="16dp"
            android:textAlignment="textStart"
            android:textColor="@color/blackTextColor"
            android:layout_toRightOf="@+id/less"
            android:gravity="start" />
        <ImageView
            android:id="@+id/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/less"
            android:padding="10dp"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:textAlignment="textStart"
            android:textColor="@color/blackTextColor"
            android:layout_toRightOf="@+id/less"
            android:gravity="start" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">
        <TextView
            android:id="@+id/nameTatol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Total Price:"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textColor="@color/blackTextColor"
            android:gravity="start" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="0"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/nameTatol"
            android:textAlignment="textStart"
            android:textColor="@color/blackTextColor"
            android:layout_toRightOf="@+id/nameTatol"
            android:gravity="start" />
    </RelativeLayout>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="Add to Cart"/>
</LinearLayout>