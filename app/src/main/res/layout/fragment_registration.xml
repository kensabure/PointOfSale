<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/shape_rec01">
            <ImageView
                android:id="@+id/close"
                android:onClick="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=" Sign Up Now"
                android:textSize="20sp"
                android:textColor="@color/whiteCardColor"
                android:textStyle="bold"/>
        </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_margin="6dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/blackTextColor" />
                <EditText
                    android:id="@+id/full_names"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/ic_account_circle_black_24dp"
                    android:background="@drawable/button_design"
                    android:padding="8dp"
                    android:inputType="textCapWords"
                    android:textColor="#0B0000"
                    android:hint=" Full Name..."
                    android:drawableLeft="@drawable/ic_account_circle_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Shop Name:"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/blackTextColor" />
                <EditText
                    android:id="@+id/shopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/ic_shop_black_24dp"
                    android:background="@drawable/button_design"
                    android:padding="8dp"
                    android:inputType="textCapWords"
                    android:textColor="#0B0000"
                    android:hint=" Shop Name..."
                    android:drawableLeft="@drawable/ic_account_circle_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/blackTextColor" />
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/ic_phone_black_24dp"
                    android:background="@drawable/button_design"
                    android:padding="8dp"
                    android:inputType="phone"
                    android:textColor="#0B0000"
                    android:hint=" Phone Number..."
                    android:drawableLeft="@drawable/ic_phone_black_24dp" />

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/blackTextColor" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_design"
                    android:padding="8dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#0B0000"
                    android:hint=" Email Address..."
                    android:drawableLeft="@drawable/ic_email_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/blackTextColor" />
                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_design"
                    android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                    android:padding="8dp"
                    android:inputType="textPassword"
                    android:textColor="#0B0000"
                    android:hint=" Password..."
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Discount:"
                        android:layout_marginBottom="8dp"
                        android:textColor="#ED0D0D" />

                    <EditText
                        android:id="@+id/product_price_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#0B0000"
                        android:gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_money_discount_24dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_design"
                        android:padding="8dp"
                        android:hint=" Discount..."
                        android:drawableLeft="@drawable/ic_money_discount_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/discountNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Discount Desc:"
                        android:layout_marginBottom="8dp"
                        android:textColor="#ED0D0D" />

                    <EditText
                        android:id="@+id/discount_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:textColor="#0B0000"
                        android:gravity="center_horizontal"
                        android:drawableStart="@drawable/ic_edit"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_design"
                        android:padding="8dp"
                        android:hint=" Discount Note e.g...10% off"
                        android:drawableLeft="@drawable/ic_edit" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColor="#F1EBEB"
                android:text="Choose Image"
                android:background="@drawable/button_try"
                android:id="@+id/choose_image"
                android:textAllCaps="false"
                android:textSize="10dp" />


            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rey.material.widget.FloatingActionButton
                    android:id="@+id/save_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    app:backgroundTint="@color/whiteCardColor"
                    app:fab_backgroundColor="@color/colorPrimaryDark"
                    app:fab_iconSrc="@drawable/ic_arrow_forward_black_24dp" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Seller"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you a Vendor?"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textAllCaps="false"/>
                <TextView
                    android:id="@+id/selle_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Here "
                    android:onClick="Seller"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/selected_dot"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>